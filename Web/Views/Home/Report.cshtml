@{
    var tableId = $"jq-report-table-id";
}

@model Average

@* Report page *@

<div class="reports-container p-1">
    <div class="row">
        <div class="col-12 p-1">
            <div class="card">
                <div class="card-body">
                    <h3 class="m-0">Reports</h3>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12 p-1">
            <div class="card">
                <div class="card-body">
                    <table class="table table-striped table-responsive" id="@tableId">
                        <thead>
                            <tr>
                                <th>Category</th>
                                <th>AvaragePrice</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.List.Any())
                            {
                                foreach (var r in Model.List)
                                {
                                    <tr>
                                        <td>@r.Category</td>
                                        <td>@r.AveragePrice</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center">
                                        <div class="alert alert-danger">
                                            No record found !
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <div class="my-3">
                        <p class="text-muted fs-5">
                            Highest stock value category:
                            @if (!string.IsNullOrEmpty(Model.HighestValue?.Category))
                            {
                                <span class="text-info">@Model.HighestValue.Category</span>
                            }
                            else
                            {
                                <span class="text-danger">No categories found</span>
                            }                     
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            // Distroy datatable
            $("#@tableId").DataTable().destroy();

            // Init datatable
            $("#@tableId").DataTable({
                layout: {
                    topStart: {
                        buttons: ['excelHtml5', 'pdfHtml5']
                    }
                }
            });
        });
    </script>
}